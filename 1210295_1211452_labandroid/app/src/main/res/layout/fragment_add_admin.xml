<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F6F8"> <!-- خلفية رمادية ناعمة -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="20dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:clipToPadding="false">

        <TextView
            android:text="Add New Admin"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1E3A8A"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- نموذج الإدخال -->
        <EditText
            android:id="@+id/editAdminFirstNamee"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminLastName"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminPhone"
            android:hint="Phone"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminGender"
            android:hint="Gender (e.g. Male/Female)"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminCountry"
            android:hint="Country"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#1E40AF"

            android:padding="12dp"/>

        <EditText
            android:id="@+id/editAdminCity"
            android:hint="City"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#1E40AF"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnAddAdmin"
            android:text="Add Admin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:elevation="2dp" />
    </LinearLayout>
</ScrollView>
